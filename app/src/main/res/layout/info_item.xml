<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#fffffe"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/display_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="姓名：xxx"
        app:layout_constraintStart_toEndOf="@id/display_avatar"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/display_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="学号：20188888"
        app:layout_constraintStart_toEndOf="@+id/display_name"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/display_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:text="性别：男"
        app:layout_constraintStart_toEndOf="@+id/display_avatar"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/display_native"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:text="籍贯：重庆江北"
        app:layout_constraintStart_toEndOf="@+id/display_gender"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/display_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="GPA：4.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/display_avatar"
        app:layout_constraintTop_toBottomOf="@+id/display_college"></TextView>

    <TextView
        android:id="@+id/display_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="学院：城市建设与环境工程学院"
        app:layout_constraintStart_toEndOf="@+id/display_avatar"
        app:layout_constraintTop_toBottomOf="@+id/display_gender"></TextView>
</android.support.constraint.ConstraintLayout>